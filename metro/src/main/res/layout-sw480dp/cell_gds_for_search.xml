<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/metro_light_gray"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:weightSum="5" >

        <ImageView
            android:id="@+id/gdsImage"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_weight="2"
            android:scaleType="centerInside" />
        
         <RelativeLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="3"
             android:paddingBottom="10dp"
	         android:paddingLeft="13dp"
	         android:paddingTop="10dp" >

	        <LinearLayout
	            android:id="@+id/contentRelativeLayout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            
	            <TextView
	                android:id="@+id/gdsTitle"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ellipsize="end"
	                android:maxLines="3"
	                android:paddingRight="40dp"
	                android:text="Лосось"
	                android:textColor="@color/metro_navy"
	                android:textSize="16sp" />
	                     
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:orientation="horizontal" >
	            	
	            	<TextView
	            	    android:id="@+id/gdsPriceUah"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_gravity="top"
	            	    android:layout_marginRight="3dp"
	            	    android:text="139"
	            	    android:textColor="@color/metro_black"
	            	    android:textSize="16sp" />
	            	
	            	<TextView
	            	    android:id="@+id/gdsPriceCoins"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginRight="3dp"
	            	    android:layout_marginTop="-3dp"
	            	    android:text="90"
	            	    android:textColor="@color/metro_black"
	            	    android:textSize="12sp" />
	            	
	            	<TextView
	            	    android:id="@+id/gdsPriceCurrency"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:text="@string/uah"
	            	    android:textColor="@color/metro_black"
	            	    android:textSize="15sp" />
	            
	            </LinearLayout>

	             
	        </LinearLayout>  

	        
	    </RelativeLayout>
  
</LinearLayout>