<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reg_CardOwner_2RL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="26dp" >

    <TextView
        android:id="@+id/reg_yurCardOwner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:text="@string/reg_yurCardOwner2"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/reg_yurCardOpenLL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:orientation="horizontal"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/reg_yurCardOpen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_yurCardClose"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/reg_yurCardOpenImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/spinner_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reg_CardOwner_2LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_yurCardOwner2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reg_iRegisterAs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:text="@string/reg_regPrizvische"
            android:textSize="18sp" />

        <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/reg_regPrizvischeEditText2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_white31"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textSize="18sp" >

        </EditText>

        <TextView
            android:id="@+id/reg_regName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:text="@string/reg_regName"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reg_regNameEditText2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_white31"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textSize="18sp" >
        </EditText>

        <TextView
            android:id="@+id/reg_regPobatkovi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:text="@string/reg_regPobatkovi"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reg_regPobatkoviEditText2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_white31"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textSize="18sp" >
        </EditText>

        <TextView
            android:id="@+id/reg_regMobPhone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:text="@string/reg_regMobPhone"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reg_regMobPhoneEditText2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_white31"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="@string/login_phoneeditHint"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="12"
            android:textSize="18sp" >
        </EditText>

        <TextView
            android:id="@+id/reg_regEmail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:text="@string/reg_regEmail"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reg_regEmailEditText2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_white31"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textSize="18sp" >
        </EditText>

        <TextView
            android:id="@+id/reg_yurCardOwnerDelete2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="23dp"
            android:layout_marginTop="12dp"
            android:text="@string/reg_yurCardOwnerDelete"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>