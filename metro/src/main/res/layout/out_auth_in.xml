<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
      <include
	    android:id="@+id/header_layout"  
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"			    
	    layout="@layout/header_metro" />

      <include
	    android:id="@+id/header_layout"  
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"			    
	    layout="@layout/subheader_auth" />

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:background="@color/metro_gray">

          <LinearLayout
              android:id="@+id/mainLinearLayout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"              
              android:orientation="vertical" >

              <TextView
                  android:id="@+id/cominTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_marginTop="36dp"
                  android:gravity="center"
                  android:lineSpacingMultiplier="0.9"
                  android:text="@string/login_cardalreadyregistered"
                  android:textColor="@color/metro_black"
                  android:textSize="16sp" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginLeft="119dp"
                  android:layout_marginRight="119dp"
                  android:layout_marginTop="17dp"
                  android:background="@drawable/bg_line" />

              <Button
                  android:id="@+id/cominButton"
                  android:layout_width="170dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center"
                  android:layout_marginBottom="34dp"
                  android:layout_marginTop="17dp"
                  android:background="@drawable/bg_btn_yellow"
                  android:text="@string/login_cominButton"
                  android:textAllCaps="true"
                  android:textColor="@color/metro_black"
                  android:textSize="16sp" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/bottomLinearLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:orientation="vertical" >

              <TextView
                  android:id="@+id/quetionTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:gravity="center"
                  android:lineSpacingMultiplier="0.9"
                  android:text="@string/login_havequestionaboutautorization"
                  android:textColor="@color/metro_black"
                  android:textSize="16sp" />

              <Button
                  android:id="@+id/quetionButton"
                  android:layout_width="208dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center"
                  android:layout_marginBottom="28dp"
                  android:layout_marginTop="9dp"
                  android:background="@drawable/bg_btn_yellow"
                  android:text="@string/login_sendquetion"
                  android:textAllCaps="true"
                  android:textColor="@color/metro_black"
                  android:textSize="13sp" />
          </LinearLayout>

      </RelativeLayout>
      
</LinearLayout>
