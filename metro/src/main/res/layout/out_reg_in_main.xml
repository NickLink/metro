<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include
	    android:id="@+id/header_layout"  
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"			    
	    layout="@layout/header_metro" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/metro_gray"
        android:paddingBottom="22dp" >
	    
        <android.support.v4.view.ViewPager
            android:id="@+id/regin_Pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/slide_switch" >

		</android.support.v4.view.ViewPager>

		<LinearLayout
		    android:id="@+id/slide_switch"
		    android:layout_width="wrap_content"
		    android:layout_height="33dp"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/bg_navy_border_height_33"
		    android:gravity="center"
		    android:orientation="horizontal"
		    android:padding="2dp"
		    android:weightSum="2" >

		    <Button
		        android:id="@+id/regin_regButton"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@drawable/bg_gray_border"
		        android:paddingLeft="16dp"
		        android:paddingRight="16dp"
		        android:text="@string/login_registrationButton"
		        android:textColor="@android:color/white"
		        android:textSize="14sp" />

		    <Button
		        android:id="@+id/regin_inButton"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@null"
		        android:paddingLeft="30dp"
		        android:paddingRight="30dp"
		        android:text="@string/login_cominButton"
		        android:textColor="@color/metro_black"
		        android:textSize="14sp" />

		</LinearLayout>

	 </RelativeLayout>
</LinearLayout>
