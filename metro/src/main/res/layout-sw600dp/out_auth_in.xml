<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
      <include
	    android:id="@+id/header_layout"  
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"			    
	    layout="@layout/header_metro" />

      <include
	    android:id="@+id/header_layout"  
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"			    
	    layout="@layout/subheader_auth" />

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/metro_gray"
          android:paddingLeft="30dp"
          android:paddingRight="30dp" >

          <LinearLayout
              android:id="@+id/mainLinearLayout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"              
              android:orientation="vertical" >

              <TextView
                  android:id="@+id/cominTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginTop="56dp"
                  android:gravity="center"
                  android:lineSpacingMultiplier="0.9"
                  android:text="@string/login_cardalreadyregistered"
                  android:textColor="@color/metro_black"
                  android:textSize="24sp" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginLeft="180dp"
                  android:layout_marginRight="180dp"
                  android:layout_marginTop="27dp"
                  android:background="@drawable/bg_line" />

              <Button
                  android:id="@+id/cominButton"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_gravity="center"
                  android:layout_marginBottom="34dp"
                  android:layout_marginTop="27dp"
                  android:background="@drawable/bg_btn_yellow"
                  android:text="@string/login_cominButton"
                  android:textAllCaps="true"
                  android:textColor="@color/metro_black"
                  android:paddingLeft="55dp"
					android:paddingRight="55dp"
                  android:textSize="24sp" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/bottomLinearLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:orientation="vertical" >

              <TextView
                  android:id="@+id/quetionTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:gravity="center"
                  android:lineSpacingMultiplier="0.9"
                  android:text="@string/login_havequestionaboutautorization"
                  android:textColor="@color/metro_black"
                  android:textSize="24sp" />

              <Button
                  android:id="@+id/quetionButton"
                  android:layout_width="wrap_content"
                  android:layout_height="45dp"
                  android:layout_gravity="center"
                  android:layout_marginBottom="38dp"
                  android:layout_marginTop="18dp"
                  android:background="@drawable/bg_btn_yellow"
                  android:paddingLeft="35dp"
                  android:paddingRight="35dp"
                  android:text="@string/login_sendquetion"
                  android:textAllCaps="true"
                  android:textColor="@color/metro_black"
                  android:textSize="18sp" />
          </LinearLayout>

      </RelativeLayout>
      
</LinearLayout>
