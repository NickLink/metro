<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metro_gray"
    android:orientation="vertical"
    android:paddingLeft="60dp"
    android:paddingRight="60dp" >

    <TextView
        android:id="@+id/scanTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="38dp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:lineSpacingMultiplier="0.9"
        android:text="@string/login_scancodetitle"
        android:textColor="@color/metro_black"
        android:textSize="24sp" />
    
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="180dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/bg_line" />

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="38dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:background="@drawable/bg_btn_yellow"
        android:paddingBottom="15dp"
        android:paddingTop="14dp"
        android:text="@string/login_scancodeBig"
        android:textAllCaps="true"
        android:textColorLink="@color/metro_black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/scanImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/card_example" />

</LinearLayout>
